<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <TriForce_FreteReal>
            <version>0.0.1</version>
        </TriForce_FreteReal>
    </modules>
    <global>
        <models>
            <triforce_fretereal>
                <class>TriForce_FreteReal_Model</class>
            </triforce_fretereal>
        </models>
        <resources>
            <triforce_fretereal_setup>
                <setup>
                    <module>TriForce_FreteReal</module>
                    <class>TriForce_FreteReal_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </triforce_fretereal_setup>
        </resources>
        <events>
            <sales_order_place_after>
                <observers>
                    <triforce_fretereal_observer>
                        <type>singleton</type>
                        <class>TriForce_FreteReal_Model_Observer</class>
                        <method>salvarDadosFrete</method>
                    </triforce_fretereal_observer>
                </observers>
            </sales_order_place_after>
        </events>
    </global>
    <default>
        <carriers>
            <triforce_fretereal>
                <active>1</active>
                <model>triforce_fretereal/carrier</model>
                <title>Frete Real</title>
                <sort_order>1</sort_order>
                <sallowspecific>1</sallowspecific>
            </triforce_fretereal>
        </carriers>
    </default>

</config>