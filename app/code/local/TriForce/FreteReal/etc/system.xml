<?xml version="1.0" encoding="UTF-8"?>
<config>
    <sections>
        <carriers translate="label" module="shipping">
            <groups>
                <triforce_fretereal translate="label">
                    <label>Frete Real</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>2</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <active translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </active>
                        <sort_order translate="label">
                            <label>Sort Order</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </sort_order>
                        <title translate="label">
                            <label>Title</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </title>
                        <client_id translate="label">
                            <label>client_id</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </client_id>
                        <client_secret translate="label">
                            <label>client_secret</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </client_secret>
                        <shipping_methods translate="label comment">                
                            <label>Shipping methods</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>triforce_fretereal/source_methods</source_model>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>                
                        </shipping_methods>
                        <mao_propria translate="label comment">                
                            <label>Own Hands</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>7</sort_order>
                            <comment><![CDATA[Habilite caso sua loja entregue apenas em mãos da pessoa que se cadastrou na loja. OBS: Cobranças adicionais]]></comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>                
                        </mao_propria>
                        <aviso_recebimento translate="label comment">                
                            <label>Receive Alert</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>8</sort_order>
                            <comment><![CDATA[Habilite caso queira receber um aviso dos correios informando que o pacote foi entregue. OBS: Pode gerar cobranças adicionais]]></comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>                
                        </aviso_recebimento>
                        <valor_declarado translate="label comment">                
                            <label>Send Values</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>9</sort_order>
                            <comment><![CDATA[Habilite caso queira declarar os valores dos produtos para os correios. OBS: Cobranças adicionais]]></comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>                
                        </valor_declarado>
                        <extra_days translate="label">
                            <label>Extra Shipping Days</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <default>0</default>
                            <comment><![CDATA[Adicione dias a mais no prazo final exibido para o cliente.]]></comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </extra_days>
                    </fields>
                </triforce_fretereal>
            </groups>
        </carriers>
    </sections>
</config>